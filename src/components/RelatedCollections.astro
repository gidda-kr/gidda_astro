---
// src/components/RelatedCollections.astro

import type { CollectionEntry } from 'astro:content';

interface Props {
    wikis: {
        id: number;
        title: string;
        slug: string;
    }[];
}

const { wikis } = Astro.props;
---

<section class="related-wikis">
    <h2>관련 콜렉션</h2>
    <ul class="wiki-list">
        {wikis.map((wiki) => (
                <li>
                    <a href={`/wiki/${wiki.slug}`}>{wiki.title}</a>
                </li>
        ))}
    </ul>
</section>

<style>
    .related-wikis {
        border-top: 1px solid #ddd;
        margin-top: 3rem;
        padding-top: 2rem;
    }
    .related-wikis h2 {
        font-size: 1.5rem;
        color: #333;
        margin-bottom: 1.5rem;
    }
    .wiki-list {
        list-style-type: none;
        padding: 0;
        display: flex;
        flex-wrap: wrap;
        gap: 0.75rem;
    }
    .wiki-list li a {
        display: inline-block;
        padding: 0.5rem 1rem;
        border: 1px solid #ccc;
        border-radius: 999px;
        background-color: #f9f9f9;
        text-decoration: none;
        color: #555;
        transition: background-color 0.2s, color 0.2s;
    }
    .wiki-list li a:hover {
        background-color: #e9e9e9;
        color: #222;
    }
</style>
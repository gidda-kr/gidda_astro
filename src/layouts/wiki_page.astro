---
import BaseLayout from './BaseLayout.astro'; // <-- BaseLayout을 임포트합니다.
export interface Props {
  title: string;
}

const { title } = Astro.props;
---

<BaseLayout title={title}>
  <header style="text-align:center; padding:1rem;">
    <a href="/wiki" style="text-decoration:none; font-weight:bold;">← 위키 대문으로 돌아가기</a>
  </header>

  <div class="wiki-content-container">
    <slot />
  </div>

  <style is:global>
    /* 이 스타일은 위키 페이지 레이아웃에만 적용됩니다. */
    .wiki-content-container {
      max-width: 800px;
      margin: 2rem auto;
      padding: 1rem 2rem;
    }
    /* --- h1, h2 폰트 크기 조정 --- */
    .wiki-content-container h1 {
      font-size: 2.5rem;
      border-bottom: 2px solid #ccc;
      padding-bottom: 0.5rem;
      margin-bottom: 2rem;
    }
    .wiki-content-container h2 {
      font-size: 1.8rem;
      margin-top: 3rem;
      margin-bottom: 1.5rem;
    }
    /* --- 각주 폰트 크기 조정 --- */
    .footnote-backref {
      font-size: 0.66rem;
    }
    .footnotes {
      margin-top: 3rem;
      padding-top: 1.5rem;
      border-top: 1px solid #ddd;
      font-size: 0.8rem;
    }
    .footnotes p {
      font-size: 0.8rem;
      margin-bottom: 0.5rem;
    }
  </style>
</BaseLayout>
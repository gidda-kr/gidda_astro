---
import BaseLayout from './BaseLayout.astro';
export interface Props {
  title: string;
}

const { title } = Astro.props;
---

<BaseLayout title={title}>
  <div class="wiki-content-container">

    <div class="page-type-label">
      WIKI
    </div>

    <slot />
  </div>

  <style is:global>
    /* 이 스타일은 위키 페이지 레이아웃에만 적용됩니다. */
    .wiki-content-container {
      max-width: 800px;
      margin: 2rem auto;
      padding: 1rem 2rem;
    }
    /* --- h1, h2 폰트 크기 조정 --- */
    .wiki-content-container h1 {
      font-size: 2rem;
      border-bottom: 2px solid #ccc;
      padding-bottom: 0.5rem;
      margin-bottom: 2rem;
    }
    .wiki-content-container h2 {
      font-size: 1.5rem;
      margin-top: 3rem;
      margin-bottom: 1.5rem;
    }
    /* --- 각주 폰트 크기 조정 --- */
    .footnote-backref {
      font-size: 0.66rem;
    }
    .footnotes {
      margin-top: 0.5rem;
      padding-top: 0.5rem;
      font-size: 0.8rem;
    }
    .footnotes p {
      font-size: 0.8rem;
      margin-bottom: 0.5rem;
    }

    /* ✨ 새로 추가된 레이블 스타일 */
    .page-type-label {
      display: inline-block;
      background-color: #f0f0f0; /* 배경색 */
      color: #666; /* 글자색 */
      font-size: 0.85rem;
      font-weight: bold;
      letter-spacing: 0.1em; /* 자간 */
      text-transform: uppercase;
      padding: 0.25rem 0.75rem;
      border-radius: 4px;
      margin-bottom: 1.5rem; /* 아래 콘텐츠와 간격 */
    }

    /* --- 인용문(blockquote) 스타일 추가 --- */
    .wiki-content-container blockquote {
      /* 왼쪽에 굵은 회색 세로선 추가 */
      border-left: 4px solid #ccc;
      /* 내부 여백 */
      padding: 1rem 1.5rem;
      /* 외부 여백 */
      margin: 2rem 0;
      /* 배경색을 살짝 회색으로 */
      background-color: #f9f9f9;
      /* 글자 스타일 */
      font-style: italic; /* 기울임꼴 */
      color: #555;
    }

    /* 또는 더 구체적으로 긴 URL만 타겟팅 */
    article a[href*="://"] {
      word-break: break-all;
      overflow-wrap: break-word;
      max-width: 100%;
      display: inline-block;
    }
  </style>
</BaseLayout>
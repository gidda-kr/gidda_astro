---
// src/layouts/wiki_page.astro

import BaseLayout from './BaseLayout.astro';

export interface Props {
  title: string;
  description?: string;
  // ✅ image, url, type prop을 BaseLayout과 동일하게 정의합니다.
  image?: string; // slug.astro에서 넘겨주는 이름과 일치시킵니다.
  url?: string;   // url prop도 추가
  type?: string;  // type prop도 추가
}

// ✅ Astro.props에서 image, url, type을 직접 받습니다.
const {
  title,
  description = "Astro description",
  image, // ogImage 대신 image로 받음
  url,
  type = "website" // 기본값 설정 (BaseLayout의 기본값과 동일)
} = Astro.props;

// 이제 BaseLayout으로 모든 prop을 올바르게 전달합니다.
---

<BaseLayout
    title={title}
    description={description}
    image={image || new URL("/default-og-image.png", Astro.url.origin).href} // BaseLayout의 기본값 로직을 여기에 가져와도 됩니다.
url={url}
type={type}
>
  <div class="wiki-content-container">
    <main class="wiki-body">
      <slot />
    </main>
  </div>

  <style is:global>

    .wiki-content-container {
      max-width: 700px;
      margin: 0rem auto;
      padding: 0rem 2rem;
      font-family: inherit;
      color: #1a1a1a;
      line-height: 1.7;
    }

    .wiki-content {
      font-size: 1rem;
      line-height: 1.7;
      color: #2a2a2a;
    }

    .wiki-content h1 {
      font-size: 1.75rem;
      font-weight: 700;
      line-height: 1.3;
      margin-top: 3rem;
      margin-bottom: 1.5rem;
      color: #1a1a1a;
      letter-spacing: -0.01em;
      border-bottom: 2px solid #e8e8e8;
      padding-bottom: 0.75rem;
    }

    .wiki-content h2 {
      font-size: 1.5rem;
      font-weight: 600;
      line-height: 1.4;
      margin-top: 2.5rem;
      margin-bottom: 1.25rem;
      color: #222;
      letter-spacing: -0.01em;
    }

    .wiki-content h3 {
      font-size: 1.25rem;
      font-weight: 600;
      line-height: 1.4;
      margin-top: 2rem;
      margin-bottom: 1rem;
      color: #333;
    }

    .wiki-content p {
      margin-bottom: 1.5rem;
      text-align: left;
      word-spacing: normal;
      letter-spacing: normal;
    }

    /* 이미지 스타일 */
    .wiki-content img {
      max-width: 100%;
      height: auto;
      display: block;
      margin: 2rem auto;
      border-radius: 8px;
      box-shadow: 0 2px 12px rgba(0, 0, 0, 0.1);
      border: 1px solid #e8e8e8;
    }

    /* URL과 긴 텍스트 처리 */
    .wiki-content a[href*="://"] {
      word-break: break-all;
      overflow-wrap: break-word;
      max-width: 100%;
      display: inline-block;
    }

    /* 강조 텍스트 */
    .wiki-content strong {
      font-weight: 600;
      color: #1a1a1a;
    }

    .wiki-content em {
      font-style: italic;
      color: #444;
    }

    /* 인용구 스타일 - 심플하게 */
    .wiki-content blockquote {
      margin: 2rem 0;
      padding: 1rem 1.5rem;
      background-color: #f9f9f9;
      border-left: 4px solid #ccc;
      font-style: italic;
      color: #555;
    }

    .wiki-content blockquote p {
      margin-bottom: 0;
    }

    /* 리스트 스타일 */
    .wiki-content ul, .wiki-content ol {
      margin: 1.5rem 0;
      padding-left: 1.5rem;
    }

    .wiki-content ul li {
      position: relative;
      margin-bottom: 0.5rem;
      line-height: 1.7;
    }

    .wiki-content ul li::marker {
      color: #355E3B;
    }

    .wiki-content ol li::marker {
      color: #355E3B;
      font-weight: 600;
    }

    /* 테이블 스타일 */
    .wiki-content table {
      width: 100%;
      border-collapse: collapse;
      margin: 2rem 0;
      font-size: 0.9rem;
      background: #fbf8f0;
      border-radius: 8px;
      overflow: hidden;
      box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
    }

    .wiki-content table thead {
      background: #fbf8f0;
    }

    .wiki-content table th {
      padding: 1rem;
      text-align: left;
      font-weight: 600;
      color: #374151;
      border-bottom: 2px solid #e5e7eb;
    }

    .wiki-content table td {
      padding: 0.75rem 1rem;
      border-bottom: 1px solid #f3f4f6;
    }

    .wiki-content table tr:hover {
      background: #fafbfc;
    }

    /* 코드 블록 처리 */
    .wiki-content pre {
      overflow-x: auto;
      background: #1f2937;
      color: #f9fafb;
      padding: 1.5rem;
      border-radius: 8px;
      margin: 2rem 0;
      font-size: 0.9rem;
      line-height: 1.5;
    }

    .wiki-content code {
      background: #f3f4f6;
      color: #374151;
      padding: 0.2rem 0.4rem;
      border-radius: 4px;
      font-size: 0.9em;
      font-family: 'Monaco', 'Menlo', 'Ubuntu Mono', monospace;
    }

    .wiki-content pre code {
      background: none;
      color: inherit;
      padding: 0;
    }

    /* 각주 스타일 - 원래대로 */
    .footnote-backref {
      font-size: 0.66rem;
    }

    .footnotes {
      margin-top: 0.5rem;
      padding-top: 0.5rem;
      font-size: 0.8rem;
    }

    .footnotes p {
      font-size: 0.8rem;
      margin-bottom: 0.5rem;
    }

    /* 각주 번호 링크 색상 - 일반 링크와 동일하게 */
    .wiki-content a[href^="#fn:"],
    .wiki-content a[href^="#fnref:"] {
      color: inherit; /* BaseLayout의 링크 색상 사용 */
    }

    /* 리스트 내부 p 태그 마진 조정 */
    .wiki-content ul p,
    .wiki-content ol p,
    .wiki-content li p {
      margin-bottom: 0.5rem !important; /* 기본 1.5rem에서 0.5rem로 축소 */
      margin-top: 0 !important;
    }

    /* 리스트 아이템 내부 마지막 p 태그는 마진 제거 */
    .wiki-content li p:last-child {
      margin-bottom: 0 !important;
    }

    /* 중첩 리스트 간격 조정 */
    .wiki-content ul ul,
    .wiki-content ol ol,
    .wiki-content ul ol,
    .wiki-content ol ul {
      margin-top: 0.5rem;
      margin-bottom: 0.5rem;
    }

    /* 리스트 아이템 자체 간격 조정 */
    .wiki-content li {
      margin-bottom: 0.75rem; /* 기존 0.5rem에서 0.75rem로 약간 증가 */
      line-height: 1.7;
    }

    /* 중첩 리스트 내부 li 간격 더 줄이기 */
    .wiki-content ul ul li,
    .wiki-content ol ol li,
    .wiki-content ul ol li,
    .wiki-content ol ul li {
      margin-bottom: 0.25rem;
    }

    /* 중첩된 리스트의 패딩 조정 */
    .wiki-content li ul,
    .wiki-content li ol {
      margin: 0.5rem 0;
      padding-left: 1.25rem;
    }

    /* 일반 문단과 리스트 내부 문단을 구분 */
    .wiki-content p:not(li p) {
      margin-bottom: 1.5rem; /* 일반 문단은 기존 간격 유지 */
    }

    /* 리스트 전체 간격 조정 */
    .wiki-content ul,
    .wiki-content ol {
      margin: 1.25rem 0; /* 기존 1.5rem에서 1.25rem로 축소 */
      padding-left: 1.5rem;
    }

    /* 반응형 */
    @media (max-width: 768px) {
      .wiki-content-container {
        padding: 1rem 1.5rem;
        margin: 1rem auto;
      }

      .wiki-content {
        font-size: 1rem;
      }

      .wiki-content h1 {
        font-size: 1.5rem;
        margin-top: 2rem;
      }

      .wiki-content h2 {
        font-size: 1.25rem;
        margin-top: 2rem;
      }

      .wiki-content img {
        margin: 1.5rem auto;
      }

      .wiki-content table {
        font-size: 0.8rem;
        overflow-x: auto;
        display: block;
        white-space: nowrap;
      }

      .footnotes {
        padding: 1.5rem;
      }
    }
  </style>
</BaseLayout>
---
export interface Props {
    title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="ko">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title}</title>
    <style is:global>
        /* --- 모든 페이지에 적용되는 전역 스타일 --- */
        body {
            font-family: Arial, sans-serif;
            line-height: 1.6;
            margin: 0;
            padding: 0;
            background-color: #fbf8f0; /* 배경색을 종이 질감에 가까운 색상으로 변경 */
            color: #333230;
            display: flex;
            flex-direction: column;
            min-height: 100vh;
        }
        main {
            flex: 1;
            /* --- main의 배경색을 누런 종이 질감으로 변경 --- */
            background-color: #f4f0e5;
        }
        a {
            color: #4CAF50; /* 링크 색상을 더 밝은 녹색으로 조정 */
            text-decoration: none;
        }
        a:hover {
            text-decoration: underline;
            color: #388E3C; /* 마우스 올렸을 때 더 진하게 */
        }
        /* --- 푸터 스타일 --- */
        footer {
            background-color: #355E3B;
            color: #fff;
            padding: 1.5rem;
            text-align: center;
            margin-top: auto;
        }
        /* --- 상단 메뉴 스타일 --- */
        .site-header {
            background-color: #f0ede5; /* 헤더 배경을 아주 연한 녹색으로 변경 */
            padding: 1.5rem 2rem;
            border-bottom: 1px solid #e0e0e0; /* 깔끔한 경계선 유지 */
            text-align: center;
            /* box-shadow 속성은 제거된 상태를 유지합니다. */
        }
        .main-nav a {
            margin: 0 1.5rem;
            font-weight: bold;
            font-size: 1.1rem;
            color: #333230;
        }
    </style>
</head>
<body>
<header class="site-header">
    <nav class="main-nav">
        <a href="/">홈</a>
        <a href="/wiki">위키</a>
        <a href="/about">소개</a>
    </nav>
</header>

<main>
    <slot />
</main>

<footer>
    <p>긷다 since 2025</p>
</footer>
</body>
</html>
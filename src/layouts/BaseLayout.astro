---
export interface Props {
    title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="ko">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title}</title>
    <style is:global>
        /* --- 모든 페이지에 적용되는 전역 스타일 --- */
        body {
            font-family: Arial, sans-serif;
            line-height: 1.6;
            margin: 0;
            padding: 0;
            background-color: #f5f5f4; /* 배경색을 부드러운 오프 화이트로 변경 */
            color: #333230; /* 텍스트 색상 */
            display: flex;
            flex-direction: column;
            min-height: 100vh;
        }
        main {
            flex: 1;
        }
        a {
            color: #355E3B; /* 링크 색상을 푸터와 동일한 헌터 그린으로 통일 */
            text-decoration: none;
        }
        a:hover {
            text-decoration: underline;
            color: #2b492e; /* 호버 시 약간 더 진한 녹색으로 */
        }
        /* --- 푸터 스타일 --- */
        footer {
            background-color: #355E3B;
            color: #fff;
            padding: 1.5rem;
            text-align: center;
            margin-top: auto;
        }
        /* --- 상단 메뉴 스타일 --- */
        .site-header {
            background-color: #f5f5f4; /* 헤더 배경색을 본문과 동일하게 변경 */
            padding: 1.5rem 2rem;
            box-shadow: 0 1px 5px rgba(0, 0, 0, 0.03); /* 그림자를 더 부드럽게 */
            text-align: center;
        }
        .main-nav a {
            margin: 0 1.5rem;
            font-weight: bold;
            font-size: 1.1rem;
            color: #333230; /* 텍스트 색상과 통일 */
        }
    </style>
</head>
<body>
<header class="site-header">
    <nav class="main-nav">
        <a href="/">홈</a>
        <a href="/wiki">위키</a>
        <a href="/about">소개</a>
    </nav>
</header>

<main>
    <slot />
</main>

<footer>
    <p>긷다 since 2025</p>
</footer>
</body>
</html>
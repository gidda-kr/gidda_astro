---
export interface Props {
    title: string;
    description?: string;
    image?: string;
    url?: string;
    type?: string;
}

const {
    title,
    description = "에코 라이브러리 - 긷다",
    image = "https://gidda.kr/default-og-image.png",
    url = Astro.url.href,
    type = "website"
} = Astro.props;
---

<!doctype html>
<html lang="ko">
<head>
    <script>(function(w,d,s,l,i){w[l]=w[l]||[];w[l].push({'gtm.start':
            new Date().getTime(),event:'gtm.js'});var f=d.getElementsByTagName(s)[0],
        j=d.createElement(s),dl=l!='dataLayer'?'&l='+l:'';j.async=true;j.src=
        'https://www.googletagmanager.com/gtm.js?id='+i+dl;f.parentNode.insertBefore(j,f);
    })(window,document,'script','dataLayer','GTM-WT36B8Z9');</script>

    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />

    <meta name="google-adsense-account" content="ca-pub-3346757467448186">
    <script async src="https://pagead2.googlesyndication.com/pagead/js/adsbygoogle.js?client=ca-pub-3346757467448186"
            crossorigin="anonymous">
    </script>

    <meta property="og:type" content={type} />
    <meta property="og:url" content={url} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={image} />
    <meta property="og:image:width" content="1200" />
    <meta property="og:image:height" content="630" />
    <meta property="og:site_name" content="에코 라이브러리 - 긷다" />
    <meta property="og:locale" content="ko_KR" />

    <meta property="twitter:card" content="summary_large_image" />
    <meta property="twitter:url" content={url} />
    <meta property="twitter:title" content={title} />
    <meta property="twitter:description" content={description} />
    <meta property="twitter:image" content={image} />

    <title>{title} - 에코 라이브러리 긷다</title>

    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />

    <script type="application/ld+json">
        {
            "@context": "https://schema.org",
            "@type": "WebSite",
            "name": "에코 라이브러리 - 긷다",
            "url": "https://gidda.kr"
        }
    </script>

    <style is:global>
        html {
            overflow-y: scroll; /* 항상 스크롤바 공간 확보 */
        }
        /* BaseLayout의 <style is:global> 섹션 맨 위에 추가 */
        @import url('https://fonts.googleapis.com/css2?family=Pretendard:wght@300;400;500;600;700&display=swap');
        /* --- 모든 페이지에 적용되는 전역 스타일 --- */
        /* 기존 body 스타일 수정 */
        body {
            font-family: 'Pretendard', -apple-system, BlinkMacSystemFont, system-ui, Arial, sans-serif;
            line-height: 1.6;
            margin: 0;
            padding: 0;
            background-color: #fbf8f0;
            color: #333230;
            display: flex;
            flex-direction: column;
            min-height: 100vh;
        }
        main {
            flex: 1;
            /* --- main의 배경색을 누런 종이 질감으로 변경 --- */
            background-color: #f4f0e5;
        }
        a {
            color: #4CAF50; /* 링크 색상을 더 밝은 녹색으로 조정 */
            text-decoration: none;
        }
        a:hover {
            text-decoration: none;
            color: #388E3C; /* 마우스 올렸을 때 더 진하게 */
        }
        /* --- 푸터 스타일 --- */
        footer {
            background-color: #355E3B;
            color: #fff;
            padding: 1.5rem;
            text-align: center;
            margin-top: auto;
        }
        /* --- 상단 메뉴 스타일 --- */
        .site-header {
            background-color: #f4f0e5;
            padding: 1.5rem 0;
        }

        /* 헤더 콘테이너 */
        .header-container {
            max-width: 800px;
            margin: 0 auto;
            padding: 0 2rem;
            position: relative;
            height: 60px; /* 헤더 컨테이너 높이 고정 */
            display: flex;
            align-items: flex-end; /* 모든 요소를 아래쪽으로 정렬 */
        }

        /* 헤더 하단 구분선 스타일 추가 */
        .site-header::after {
            content: '';
            display: block;
            width: 800px;
            height: 2px;
            background-color: #355E3B; /* 로고와 같은 진한 녹색 */
            margin: 0 auto;
            margin-top: 0.5rem; /* 헤더와 선 사이 간격 */
        }

        /* 반응형 - 800px 이하에서는 선의 너비를 화면에 맞춤 */
        @media (max-width: 800px) {
            .site-header::after {
                width: calc(100% - 2rem); /* 좌우 2rem씩 여백 */
                max-width: 800px;
            }
        }

        /* 로고 스타일 */
        .site-logo {
            position: absolute;
            left: 2rem;
            bottom: -10px; /* 컨테이너 하단에 맞춤 */
        }

        .site-logo a {
            display: block;
            text-decoration: none;
        }

        .site-logo svg {
            height: 50px; /* 로고 크기 줄임 (75px -> 50px) */
            width: auto;
        }

        /* 데스크톱 네비게이션 - 하단 정렬 */
        .main-nav {
            text-align: center;
            width: 100%;
            display: flex;
            align-items: flex-end;
            justify-content: right;
            height: 100%;
        }

        /* 아카이브 메뉴 정렬을 위한 스타일 수정 */
        .main-nav .dropdown {
            position: relative;
            display: flex;
            align-items: flex-end;
            margin: 0 2.1rem; /* 다른 링크와 동일한 간격 유지 */
            height: 100%;
            padding-bottom: 5px; /* 다른 링크와 동일한 패딩 유지 */
        }

        .main-nav a {
            font-weight: normal;
            font-size: 1.3rem;
            color: #333230;
            text-decoration: none;
            transition: color 0.2s ease;
        }

        /* 다른 모든 최상위 링크에 동일한 마진과 패딩을 적용 */
        .main-nav > a {
            margin: 0 2.1rem;
            padding-bottom: 5px;
        }

        .main-nav a:hover {
            color: #355E3B;
        }
        /* ✨ 하위 메뉴 스타일 수정 시작 ✨ */
        .main-nav .dropdown-content {
            display: none;
            position: absolute;
            top: 100%;
            left: 50%;
            transform: translateX(-50%);
            background-color: #f4f0e5;
            min-width: 120px; /* 가로 폭을 줄여 깔끔하게 */
            box-shadow: 0px 8px 16px 0px rgba(0,0,0,0.1);
            z-index: 1;
            border-radius: 5px;
            overflow: hidden;
            border: 1px solid #e0e0e0;
        }

        .main-nav .dropdown-content a {
            color: #333230;
            padding: 10px 16px; /* 여백 조정 */
            text-decoration: none;
            display: block;
            text-align: center; /* 가운데 정렬 */
            margin: 0;
            font-size: 1.1rem;
            font-weight: 500;
        }

        .main-nav .dropdown-content a:hover {
            background-color: #e8e4d9;
            color: #355E3B;
        }

        .main-nav .dropdown:hover .dropdown-content {
            display: block;
        }
        /* ✨ 하위 메뉴 스타일 수정 끝 ✨ */

        /* 햄버거 메뉴 버튼 */
        .mobile-menu-toggle {
            display: none;
            background: none;
            border: none;
            font-size: 1.5rem;
            color: #333230;
            cursor: pointer;
            padding: 0.5rem;
            position: absolute;
            right: 2rem;
            bottom: 0; /* 컨테이너 하단에 맞춤 */
        }

        .mobile-menu-toggle:hover {
            color: #355E3B;
        }

        /* 햄버거 아이콘 */
        .hamburger {
            display: flex;
            flex-direction: column;
            width: 20px;
            height: 15px;
            justify-content: space-between;
        }

        .hamburger span {
            display: block;
            height: 2px;
            width: 100%;
            background-color: currentColor;
            transition: all 0.3s ease;
        }

        /* 햄버거 애니메이션 */
        .mobile-menu-toggle.active .hamburger span:nth-child(1) {
            transform: rotate(45deg) translate(5px, 5px);
        }

        .mobile-menu-toggle.active .hamburger span:nth-child(2) {
            opacity: 0;
        }

        .mobile-menu-toggle.active .hamburger span:nth-child(3) {
            transform: rotate(-45deg) translate(7px, -6px);
        }

        /* 모바일 메뉴 */
        .mobile-nav {
            display: none;
            position: absolute;
            top: calc(100% + 2rem);
            left: 2rem;
            right: 2rem;
            background-color: #f4f0e5;
            border: 1px solid #e0e0e0;
            border-radius: 8px;
            box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
            z-index: 100;
        }

        .mobile-nav.active {
            display: block;
        }

        .mobile-nav a {
            display: block;
            padding: 1rem 1.5rem;
            color: #333230;
            font-weight: 500;
            font-size: 1.1rem;
            border-bottom: 1px solid #e0e0e0;
            transition: background-color 0.2s ease;
        }

        .mobile-nav a:hover {
            background-color: #e8e4d9;
            color: #355E3B;
        }

        .mobile-nav a:last-child {
            border-bottom: none;
            border-radius: 0 0 8px 8px;
        }

        .mobile-nav a:first-child {
            border-radius: 8px 8px 0 0;
        }

        /* 반응형 - 768px 이하에서 햄버거 메뉴 활성화 */
        @media (max-width: 768px) {
            .site-header {
                padding: 1.5rem 0;
            }

            .header-container {
                padding: 0 1rem; /* 모바일에서 좌우 패딩을 1rem (16px)로 줄입니다. */
                height: 50px; /* 모바일에서 높이 조정 */
            }

            /* ✨✨✨ 이 부분을 추가합니다: 로고와 햄버거 버튼의 절대 위치도 함께 줄여줍니다. ✨✨✨ */
            .site-logo {
                left: 1rem; /* 모바일에서 왼쪽 간격을 1rem로 줄입니다. */
            }

            .mobile-menu-toggle {
                right: 1rem; /* 모바일에서 오른쪽 간격을 1rem로 줄입니다. */
            }

            .site-logo svg {
                height: 40px; /* 모바일에서 로고 크기도 적절히 조정 */
            }

            .mobile-menu-toggle {
                display: block;
            }

            .main-nav {
                display: none;
            }
            /* ✨ 모바일 메뉴에서 하위 메뉴 스타일 ✨ */
            .mobile-nav a {
                padding-left: 1.5rem;
            }
            .mobile-nav .sub-menu a {
                padding-left: 2.5rem;
                border-top: 1px solid #e0e0e0;
            }
        }

        #scrollToTopBtn {
            display: none;
            position: fixed;
            bottom: 2rem;
            right: 2rem;
            z-index: 99;
            border: none;
            outline: none;
            background-color: #355E3B;
            color: white;
            cursor: pointer;
            padding: 1rem 1.2rem;
            border-radius: 50%;
            font-size: 1.5rem;
            font-weight: bold;
            line-height: 1;
            opacity: 0.8;
            transition: opacity 0.3s, transform 0.3s;
        }
        #scrollToTopBtn:hover {
            opacity: 1;
            transform: scale(1.1);
        }
    </style>
</head>
<body>
<noscript><iframe src="https://www.googletagmanager.com/ns.html?id=GTM-WT36B8Z9"
                  height="0" width="0" style="display:none;visibility:hidden"></iframe></noscript>
<header class="site-header">
    <div class="header-container">
        <div class="site-logo">
            <a href="/" aria-label="긷다 홈으로">
                <svg width="160" height="50" viewBox="0 0 160 50" fill="none" xmlns="http://www.w3.org/2000/svg">
                    <style>
                        .logo-text {
                            font-family: 'Noto Sans KR', 'Spoqa Han Sans Neo', 'Apple SD Gothic Neo', 'Malgun Gothic', 'Pretendard', sans-serif;
                            font-weight: 700;
                            font-size: 32px;
                            fill: #355E3B;
                            letter-spacing: -0.02em;
                        }
                    </style>
                    <text x="0" y="35" class="logo-text">긷다</text>
                </svg>
            </a>
        </div>

        <nav class="main-nav">
            <div class="dropdown">
                <a href="/archive">아카이브</a>
                <div class="dropdown-content">
                    <a href="/archive/collection">컬렉션</a>
                </div>
            </div>
            <a href="/wiki">위키</a>
            <a href="/webzine">웹진</a>
            <a href="/">웹북</a>
            <a href="/about">소개</a>
        </nav>

        <button class="mobile-menu-toggle" id="mobileMenuToggle" aria-label="메뉴 열기">
            <div class="hamburger">
                <span></span>
                <span></span>
                <span></span>
            </div>
        </button>

        <nav class="mobile-nav" id="mobileNav">
            <a href="/">홈</a>
            <a href="/archive">아카이브</a>
            <div class="sub-menu">
                <a href="/archive/collection">컬렉션</a>
            </div>
            <a href="/wiki">위키</a>
            <a href="/webzine">웹진</a>
            <a href="/">웹북</a>
            <a href="/about">소개</a>
        </nav>
    </div>
</header>

<main>
    <slot />
</main>

<button id="scrollToTopBtn" title="페이지 맨 위로">↑</button>

<script is:inline>
    // JavaScript: 스크롤 감지 및 버튼 클릭 이벤트 처리
    // ① DOMContentLoaded 이벤트 리스너: HTML 문서가 완전히 로드되면 실행됩니다.
    document.addEventListener('DOMContentLoaded', () => {
        // ② 여기서 button 요소를 찾아 'btn'이라는 변수에 할당합니다.
        const btn = document.getElementById('scrollToTopBtn');

        // 스크롤 위치에 따라 버튼을 보이거나 숨깁니다.
        window.onscroll = () => {
            // 200px 이상 스크롤했을 때 버튼을 표시합니다.
            if (document.body.scrollTop > 200 || document.documentElement.scrollTop > 200) {
                btn.style.display = 'block';
            } else {
                btn.style.display = 'none';
            }
        };

        // 버튼을 클릭했을 때 페이지 맨 위로 부드럽게 스크롤합니다.
        btn.addEventListener('click', () => {
            window.scrollTo({
                top: 0,
                behavior: 'smooth'
            });
        });

        // 모바일 메뉴 토글 기능
        const mobileMenuToggle = document.getElementById('mobileMenuToggle');
        const mobileNav = document.getElementById('mobileNav');

        mobileMenuToggle.addEventListener('click', () => {
            mobileMenuToggle.classList.toggle('active');
            mobileNav.classList.toggle('active');
        });

        // 모바일 메뉴 링크 클릭시 메뉴 닫기
        const mobileNavLinks = mobileNav.querySelectorAll('a');
        mobileNavLinks.forEach(link => {
            link.addEventListener('click', () => {
                mobileMenuToggle.classList.remove('active');
                mobileNav.classList.remove('active');
            });
        });

        // 화면 크기 변경시 모바일 메뉴 초기화
        window.addEventListener('resize', () => {
            if (window.innerWidth > 768) {
                mobileMenuToggle.classList.remove('active');
                mobileNav.classList.remove('active');
            }
        });
    });
</script>

<footer>
    <p>에코 라이브러리 - 긷다 since 2025</p>
    <p style="font-size: 0.8rem; line-height: 1.4;">
        <a href="https://creativecommons.org/licenses/by-nc/4.0/deed.ko"
           target="_blank"
           rel="noopener noreferrer"
           style="color: #ccc;">
            크리에이티브 커먼스<br>
            저작자표시-비영리 4.0<br>
            (CC BY-NC 4.0)
        </a>
    </p>
</footer>
</body>
</html>
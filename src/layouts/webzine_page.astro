---
import BaseLayout from './BaseLayout.astro';

export interface Props {
    title: string;
    author: { name: string; id: number; documentId?: string; } | null | undefined;
    publishedAt: string;
    featuredImage?: {
        url: string;
        alt: string;
    };
}

const { title, author, publishedAt, featuredImage } = Astro.props;

// ✨ 디버깅: featuredImage prop 확인
console.log('Layout에서 받은 featuredImage:', featuredImage);

const formattedDate = new Date(publishedAt).toLocaleDateString('ko-KR', {
    year: 'numeric',
    month: 'long',
    day: 'numeric'
});
---

<BaseLayout title={title}>
    <div class="webzine-content-container">

        <div class="page-type-label">
            WEBZINE
        </div>

        <header class="article-header">
            {featuredImage && (
                    <img src={featuredImage.url} alt={featuredImage.alt} class="featured-image" />
            )}
            <h1 class="article-title">{title}</h1>
            <div class="article-meta">
                <span class="author">By {author?.name || '작성자 미지정'}</span>
                <span class="separator">•</span>
                <span class="date">{formattedDate}</span>
            </div>
        </header>

        <main class="article-body">
            <slot />
        </main>
    </div>

    <style is:global>
        /* 웹폰트 로드 */
        @import url('https://fonts.googleapis.com/css2?family=Pretendard:wght@300;400;500;600;700&display=swap');

        .webzine-content-container {
            max-width: 700px;
            margin: 2rem auto;
            padding: 1rem 2rem;
            font-family: 'Pretendard', -apple-system, BlinkMacSystemFont, system-ui, sans-serif;
            color: #1a1a1a;
            line-height: 1.75;
        }

        .article-header {
            text-align: center;
            margin-bottom: 4rem;
            border-bottom: 1px solid #e8e8e8;
            padding-bottom: 3rem;
        }

        .featured-image {
            width: 100%;
            max-height: 450px;
            object-fit: cover;
            border-radius: 12px;
            margin-bottom: 2.5rem;
            box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
        }

        .article-title {
            font-size: clamp(2rem, 4vw, 2.75rem);
            font-weight: 700;
            line-height: 1.2;
            margin-bottom: 1.5rem;
            color: #1a1a1a;
            letter-spacing: -0.02em;
        }

        .article-meta {
            font-size: 0.9rem;
            color: #666;
            font-weight: 400;
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 0.75rem;
        }

        .article-meta .author {
            font-weight: 500;
            color: #444;
        }

        .article-meta .separator {
            color: #999;
            font-weight: 300;
        }

        .article-meta .date {
            color: #666;
        }

        /* 본문 타이포그래피 */
        .article-body {
            font-size: 1rem;
            line-height: 1.6;
            color: #2a2a2a;
        }

        .article-body h1 {
            font-size: 2rem;
            font-weight: 700;
            line-height: 1.3;
            margin-top: 3.5rem;
            margin-bottom: 1.5rem;
            color: #1a1a1a;
            letter-spacing: -0.01em;
            border-bottom: 2px solid #f0f0f0;
            padding-bottom: 0.5rem;
        }

        .article-body h2 {
            font-size: 1.5rem;
            font-weight: 600;
            line-height: 1.4;
            margin-top: 3rem;
            margin-bottom: 1.25rem;
            color: #222;
            letter-spacing: -0.01em;
        }

        .article-body h3 {
            font-size: 1.25rem;
            font-weight: 600;
            line-height: 1.4;
            margin-top: 2.5rem;
            margin-bottom: 1rem;
            color: #333;
        }

        .article-body p {
            margin-bottom: 1.75rem;
            text-align: left;
            word-spacing: normal;
            letter-spacing: normal;
        }

        /* ✨ 본문 이미지 크기 제한 및 반응형 처리 */
        .article-body img {
            max-width: 100%;
            height: auto;
            display: block;
            margin: 2rem auto;
            border-radius: 8px;
            box-shadow: 0 2px 12px rgba(0, 0, 0, 0.1);
        }

        /* 이미지가 너무 작을 때 원본 크기 유지 */
        .article-body img[width] {
            width: auto;
            max-width: 100%;
        }

        /* URL과 긴 텍스트 처리 */
        .article-body a[href*="://"] {
            word-break: break-all;
            overflow-wrap: break-word;
            max-width: 100%;
            display: inline-block;
        }

        /* 강조 텍스트 */
        .article-body strong {
            font-weight: 600;
            color: #1a1a1a;
        }

        .article-body em {
            font-style: italic;
            color: #444;
        }

        /* 인용구 스타일 */
        .article-body blockquote {
            margin: 2rem 0;
            padding: 1.5rem 2rem;
            background: #f0fdf4;
            border-left: 4px solid #22c55e;
            font-style: italic;
            color: #555;
            border-radius: 0 8px 8px 0;
        }

        .article-body blockquote p {
            margin-bottom: 0;
        }

        /* 리스트 스타일 */
        .article-body ul, .article-body ol {
            margin: 1.5rem 0;
            padding-left: 1.5rem;
        }

        .article-body li {
            margin-bottom: 0.5rem;
            line-height: 1.7;
        }

        /* 테이블 반응형 처리 */
        .article-body table {
            width: 100%;
            max-width: 100%;
            border-collapse: collapse;
            margin: 2rem 0;
            font-size: 0.9rem;
            overflow-x: auto;
            display: block;
            white-space: nowrap;
        }

        .article-body table thead {
            display: table-header-group;
        }

        .article-body table tbody {
            display: table-row-group;
        }

        .article-body table tr {
            display: table-row;
        }

        .article-body table td,
        .article-body table th {
            display: table-cell;
            padding: 0.75rem;
            border: 1px solid #e0e0e0;
            white-space: normal;
        }

        /* 코드 블록 처리 */
        .article-body pre {
            overflow-x: auto;
            background: #f5f5f5;
            padding: 1rem;
            border-radius: 6px;
            margin: 1.5rem 0;
            font-size: 0.9rem;
        }

        .article-body code {
            background: #f0f0f0;
            padding: 0.2rem 0.4rem;
            border-radius: 3px;
            font-size: 0.9em;
        }

        .article-body pre code {
            background: none;
            padding: 0;
        }

        .page-type-label {
            display: inline-block;
            background: #355E3B;
            color: white;
            font-size: 0.75rem;
            font-weight: 600;
            letter-spacing: 0.1em;
            text-transform: uppercase;
            padding: 0.5rem 1rem;
            border-radius: 20px;
            margin-bottom: 2rem;
        }

        /* 반응형 */
        @media (max-width: 768px) {
            .webzine-content-container {
                padding: 1rem 1.5rem;
                margin: 1rem auto;
            }

            .article-header {
                margin-bottom: 3rem;
                padding-bottom: 2rem;
            }

            .featured-image {
                max-height: 300px;
                margin-bottom: 2rem;
            }

            .article-title {
                font-size: 1.75rem;
                margin-bottom: 1rem;
            }

            .article-meta {
                font-size: 0.85rem;
                flex-direction: column;
                gap: 0.5rem;
            }

            .article-body {
                font-size: 1rem;
            }

            .article-body h1 {
                font-size: 1.5rem;
                margin-top: 2.5rem;
            }

            .article-body h2 {
                font-size: 1.25rem;
                margin-top: 2rem;
            }

            /* 모바일에서 이미지 여백 조정 */
            .article-body img {
                margin: 1.5rem auto;
            }

            /* 모바일에서 테이블 스크롤 */
            .article-body table {
                font-size: 0.8rem;
            }
        }

        @media (max-width: 480px) {
            .webzine-content-container {
                padding: 1rem;
                margin: 0.5rem auto;
            }

            .featured-image {
                max-height: 250px;
            }

            .article-body img {
                margin: 1rem auto;
            }
        }
    </style>
</BaseLayout>